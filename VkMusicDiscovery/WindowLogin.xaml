<Window x:Class="VkMusicDiscovery.WindowLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowLogin" Height="150" Width="250">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">
            Login:
        </TextBlock>
        <TextBox x:Name="TxtLogin" Grid.Row="1" BorderThickness="1"/>
        <TextBlock Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">
            Password:
        </TextBlock>
        <TextBox x:Name="TxtPassword" Grid.Row="3"/>
    </Grid>
</Window>
